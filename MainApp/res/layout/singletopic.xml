<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/companyHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#FF000000"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/part1text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latest article in this topic: "
            android:textSize="11dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFFFF" />

        <TextView
            android:id="@+id/part1text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFFFF" />

        <TextView
            android:id="@+id/part1text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aggregated from x sources, last seen 2012/12/12"
            android:textSize="10dp"
            android:textColor="#FFFFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/part2text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_margin="3dp"
            android:background="#FFCCCCCC" />

        <TextView
            android:id="@+id/part2text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keywords"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <TextView
        android:id="@+id/list1header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF000000"
        android:padding="5dp"
        android:text="Companies involved"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFFFF" />

    <TableLayout
        android:id="@+id/list1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp">
    </TableLayout>

    <TextView
        android:id="@+id/articlesheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF000000"
        android:padding="5dp"
        android:text="Sample sources"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/part4text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#FF000000"
            android:onClick="titleClickHandler"
            android:padding="3dp"
            android:text="Medium"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFFFF"
            android:visibility="gone" />

        <Button
            android:id="@+id/part4text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#FF000000"
            android:onClick="titleClickHandler"
            android:padding="3dp"
            android:text="Medium"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFFFF"
            android:visibility="gone" />

        <Button
            android:id="@+id/part4text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#FF000000"
            android:onClick="titleClickHandler"
            android:padding="3dp"
            android:text="Medium"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFFFF"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/part4text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#FF000000"
            android:onClick="titleClickHandler"
            android:padding="3dp"
            android:text="Medium"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFFFF"
            android:visibility="gone" />

        <Button
            android:id="@+id/part4text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#FF000000"
            android:onClick="titleClickHandler"
            android:padding="3dp"
            android:text="Medium"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFFFF"
            android:visibility="gone" />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>

